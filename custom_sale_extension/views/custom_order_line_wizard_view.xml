<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="wizard_custom_sale_order_line" model="ir.ui.view">
        <field name="name">custom.order.line.wizard</field>
        <field name="model">custom.order.line.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="line_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="product_id" string="Product"/>
                            <field name="quantity" string="Quantity"/>
                            <field name="price_unit" string="Unit Price"/>
                            <field name="taxes" string="Taxes" widget="many2many_tags"/>
                            <field name="amount" string="Amount"/>
                        </list>
                    </field>
                </group>
                 <footer>
                    <button name="action_save" string="Submit" type="object" class="btn-primary"/>
                 </footer>
            </form>
        </field>
    </record>
</odoo>