<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_inherit_timer" model="ir.ui.view">
        <field name="name">res.users.form.inherit.timer</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='messaging']" position="after">
                <group string="Session Timer Configuration">
                    <field name="timer_enable" widget="boolean_toggle"/>
                    <field name="set_time" invisible="not timer_enable"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>