<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_order_form_inherit_additional_qty" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.qty</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list//field[@name='product_uom_qty']" position="after">
            <field name="additional_qty"/>
            </xpath>

            <xpath expr="//field[@name='order_line']/list//field[@name='price_subtotal']" position="after">
                <field name="final_amount"/>
            </xpath>
        </field>
    </record>
</odoo>
