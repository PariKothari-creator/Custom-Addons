<?xml version="1.0" encoding="utf-8" ?>
<odoo>


    <record id="school_student_tree_view" model="ir.ui.view">
        <field name="name">school.student.list</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <list string="Student list">
                <header>
                    <button name="action_download_excel"
                            type="object"
                            string="Student Excel Report"
                            class="btn-primary"
                            groups="school_management.group_report_download"/>

                </header>
                <field name="name"/>
                <field name="roll_no"/>
                <field name="age"/>
                <field name="dob" widget="date" optional="hide"/>
                <field name="fees_status" optional="hide"/>
                <field name="total_fee" optional="hide"/>
                <field name="gender"/>
                <field name="class_id"/>
                <field name="subject_ids" optional="hide"/>
                <field name="total_subjects"/>
                <field name="status" optional="hide"/>
            </list>
        </field>
    </record>

    <record id="student_form_teacher" model="ir.ui.view">
        <field name="name">student.form.teacher</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <header>
                    <button name="view_subjects"
                            type="object"
                            string="View Subjects"
                            class="btn-primary"
                            invisible="not subject_ids"
                    />
                    <button name="action_view_exams"
                            type="object"
                            string="Exams"
                            class="btn-primary"
                            invisible="not exam_given"/>
                </header>
                <sheet>
                    <group col="2">
                        <group string="Personal Details">
                            <field name="display_name" invisible="1"/>
                            <field name="exam_given" invisible="1"/>
                            <field name="name" required="1"/>
                            <field name="dob"/>
                            <field name="age"/>
                            <field name="fees_status"/>
                            <field name="gender" widget="radio"/>
                            <field name="email"/>
                        </group>
                        <group string="Academic Details">
                            <field name="roll_no"/>
                            <field name="class_id" options="{'no_create': True}"/>
                            <field name="total_fee" readonly="1"/>
                            <field name="subject_ids" readonly="1" force_save="1" widget="many2many_tags"/>
                            <field name="total_subjects" invisible="not subject_ids"/>
                            <field name="status" readonly="1"/>
                            <field name="fees_status"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>


    <!-- Kanban View -->
    <record id="school_student_kanban_view" model="ir.ui.view">
        <field name="name">school.student.kanban</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="roll_no"/>
                <field name="class_id"/>
                <field name="age"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_card">
                            <div class="o_kanban_content">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div>Roll No:
                                    <field name="roll_no"/>
                                </div>
                                <div>Class:
                                    <field name="class_id"/>
                                </div>
                                <div>Age:
                                    <field name="age"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="school_student_search_view" model="ir.ui.view">
        <field name="name">school.student.search</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="roll_no"/>
                <field name="class_id"/>
                <group expand="1" string="Group By">
                    <filter string="Status" name="group_status" context="{'group_by':'status'}"/>
                    <filter string="Class" name="group_class" context="{'group_by':'class_id'}"/>
                </group>
            </search>
        </field>
    </record>

<!--    Pivot-->
    <record id="school_student_pivot_view" model="ir.ui.view">
        <field name="name">school.student.pivot</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="class_id" type="row"/>
                <field name="gender" type="col"/>
                <field name="student_count" type="measure" operator="count"/>
            </pivot>
        </field>
    </record>

<!--    Graph-->
     <record id="school_student_graph_view" model="ir.ui.view">
        <field name="name">school.student.graph</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <graph>
                <field name="class_id"/>
                <field name="student_count" type="measure"/>
            </graph>
        </field>
     </record>


    <!-- Action -->
    <record id="school_student_action_view" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">kanban,graph,list,form,pivot</field>
    </record>
</odoo>
