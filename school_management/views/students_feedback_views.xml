<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="action_student_feedback" model="ir.actions.client">
        <field name="name">Student Feedback</field>
        <field name="tag">student_feedback</field>
    </record>

    <record id="student_feedback_list" model="ir.ui.view">
        <field name="name">students.feedback.list</field>
        <field name="model">students.feedback</field>
        <field name="arch" type="xml">
            <list string="Student Feedback list">
                <field name="student_id" string="Student Name"/>
                <field name="class_id" string="Class"/>
                <field name="teacher_id" string="Teacher Name"/>
                <field name="rating" string=" Overall Rating"/>
                <field name="remarks" string="Remarks"/>
                <field name="discipline_grade" string="Discipline_Grade"/>
            </list>
        </field>
    </record>

    <record id="view_student_feedback_form_popup" model="ir.ui.view">
        <field name="name">students.feedback.form</field>
        <field name="model">students.feedback</field>
        <field name="arch" type="xml">
            <form string="Student Feedback Details">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="student_id" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Basic Info">
                            <field name="class_id" readonly="1"/>
                            <field name="teacher_id" readonly="1"/>
                        </group>
                        <group string="Ratings">
                            <field name="rating" />
                            <field name="discipline_grade"/>
                        </group>
                    </group>
                    <group string="Teacher's Remarks">
                        <field name="remarks" nolabel="1" placeholder="No remarks added..."/>
                    </group>
                </sheet>
                <footer>
                    <button name="save" string="Save Changes" type="object" class="btn-primary" special="save"/>
                    <button string="Close" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_student_feedback_list" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="res_model">students.feedback</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>