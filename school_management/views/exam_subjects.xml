<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List view for exam.subjects -->
    <record id="exam_subjects_tree_view" model="ir.ui.view">
        <field name="name">exam.subjects.list</field>
        <field name="model">exam.subjects</field>
        <field name="arch" type="xml">
            <list string="Exam Subjects" editable="bottom">
                <field name="subject_id" />
                <field name="marks"/>
                <field name="class_id"/>
            </list>
        </field>
    </record>

    <!-- Form view for exam.subjects -->
    <record id="exam_subjects_form_view" model="ir.ui.view">
        <field name="name">exam.subjects.form</field>
        <field name="model">exam.subjects</field>
        <field name="arch" type="xml">
            <form string="Exam Subject">
                <sheet>
                    <group>
                        <field name="exam_id" readonly="1"/>
                        <field name="student_id" readonly="1" force_save="1"/>
                        <field name="subject_id" />
                        <field name="marks"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to view all exam subjects -->
    <record id="action_exam_subjects" model="ir.actions.act_window">
        <field name="name">Exam Subjects</field>
        <field name="res_model">exam.subjects</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="exam_subjects_tree_view"/>
    </record>

</odoo>