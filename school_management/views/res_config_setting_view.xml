<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_inherit_school" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.school</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app name="school_management" string="School">
                    <block title="Reports Download" name="reports_download_setting_container">
                        <setting id="report_download_setting" string="Reports Download" help="Allow Students to download their reports">
                            <field name="report_visible"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>

    <record id="action_school_settings" model="ir.actions.act_window">
        <field name="name">Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="base.res_config_settings_view_form"/>
        <field name="target">inline</field>
        <field name="context">{'module':'school_management', 'bin_size': False}</field>
    </record>
</odoo>