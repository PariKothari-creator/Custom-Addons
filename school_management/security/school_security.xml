<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="module_category_school" model="ir.module.category">
            <field name="name">School Management</field>
    </record>

    <record id="group_student" model="res.groups">
        <field name="name">Student</field>
        <field name="category_id" ref="module_category_school"/>
<!--        <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>-->
    </record>

    <record id="group_teacher" model="res.groups">
        <field name="name">Teacher</field>
        <field name="category_id" ref="module_category_school"/>
<!--        <field name="implied_ids" eval="[(6, 0, [ref('base.group_user')])]"/>-->
    </record>

    <record id="student_record_rule" model="ir.rule">
        <field name="name">My Profile</field>
        <field name="model_id" ref="model_school_student"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4,ref('school_management.group_student'))]"/>
    </record>

    <record id="student_rule_teacher" model="ir.rule">
    <field name="name">Students of Teacher</field>
    <field name="model_id" ref="model_school_student"/>
    <field name="domain_force">[('class_id.teacher_id','=',user.id)]</field>
    <field name="groups" eval="[(4, ref('school_management.group_teacher'))]"/>
</record>

    </odoo>